<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape = "rectangle">
            <solid android:color="#3D4142"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <corners
            android:radius="40dp" />

        <gradient
            android:angle="45"
            android:endColor="#FA0101"
            android:startColor="#ABFF0151"
            android:type="linear" />

        <size
            android:width="82dp"
            android:height="82dp" />

        <stroke
            android:width="5dp"
            android:color="#3D4142" />
        </shape>
    </item>

</layer-list>
